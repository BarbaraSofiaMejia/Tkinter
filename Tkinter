import tkinter as tk
def saludar():
    nombre = entrada_nombre.get()
    edad = entrada_edad.get()
    etiqueta_resultado.config(text=f"Hola {nombre}, tú tienes {edad} años")
    
ventana = tk.Tk()
ventana.title("Mi primera app grafica")
ventana.geometry("400x200")
etiqueta1 = tk.Label(ventana, text="Ingresa tu nombre:")
etiqueta1.pack()
entrada_nombre = tk.Entry(ventana)
entrada_nombre.pack()
etiqueta2 = tk.Label(ventana, text="Ingresa tu edad:")
etiqueta2.pack()
entrada_edad = tk.Entry(ventana)
entrada_edad.pack()

boton = tk.Button(ventana, text="Mostrar saludo", command=saludar)
boton.pack()

etiqueta_resultado = tk.Label(ventana, text="")
etiqueta_resultado.pack()
ventana.mainloop()
